<!-- Header -->
<%- include('layouts/header') %>
<!-- Sidebar -->
<%- include('layouts/sidebar') %>

<div class="main-content flex-grow-1 p-4">
  <div class="container-fluid py-4">
    <div class="card shadow">
      <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
        <h2 class="mb-0"><strong>User Management</strong></h2>
        <span><%- include('partials/createUser') %></span>
      </div>

      <!-- üîç Form t√¨m ki·∫øm User -->
      <form action="/users" method="GET" class="row g-2 mb-3">
        <div class="col-md-3">
          <select name="criteria" class="form-select">
            <option value="username" <%= criteria === 'username' ? 'selected' : '' %>>T√¨m theo Username</option>
            <option value="email" <%= criteria === 'email' ? 'selected' : '' %>>T√¨m theo Email</option>
            <option value="phone" <%= criteria === 'phone' ? 'selected' : '' %>>T√¨m theo S·ªë ƒëi·ªán tho·∫°i</option>
            <option value="address" <%= criteria === 'address' ? 'selected' : '' %>>T√¨m theo ƒê·ªãa ch·ªâ</option>
          </select>
        </div>
        <div class="col-md-6">
          <input type="text" name="query" class="form-control" placeholder="Nh·∫≠p t·ª´ kh√≥a..." value="<%= query || '' %>" required>
        </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-primary w-100">üîç T√¨m ki·∫øm</button>
        </div>
      </form>

      <!-- B·∫£ng hi·ªÉn th·ªã danh s√°ch User -->
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover table-bordered mb-0">
            <thead class="table-dark text-white">
              <tr>
                <th class="text-center">No.</th>
                <th>Username</th>
                <th>Role</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Is Active</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (dataTable.length > 0) { %>
                <% dataTable.forEach(function(user, index) { %>
                  <tr>
                    <td class="text-center"><%= index + 1 %></td>
                    <td><strong><%= user.username %></strong></td>
                    <td>
                      <span class="badge rounded-pill <%= user.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                        <%= user.role %>
                      </span>
                    </td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.gender == 1 ? 'Male' : 'Female' %></td>
                    <td><a href="mailto:<%= user.email %>" class="text-decoration-none"><%= user.email %></a></td>
                    <td><%= user.phone %></td>
                    <td><%= user.address %></td>
                    <td class="text-center">
                      <a href="/users/toggle-active?id=<%= user.user_id %>"
                        class="badge rounded-pill <%= user.is_active ? 'bg-success' : 'bg-danger' %>">
                        <%= user.is_active ? "On" : "Off" %>
                      </a>
                    </td>
                    <td class="text-center">
                      <div class="d-flex justify-content-center gap-2">
                        <button type="button" class="btn btn-outline-primary btn-sm edit-user-btn"
                          data-bs-toggle="modal" data-bs-target="#editUserModal"
                          data-id="<%= user.user_id %>"
                          data-username="<%= user.username %>"
                          data-first_name="<%= user.first_name %>"
                          data-last_name="<%= user.last_name %>"
                          data-phone="<%= user.phone %>"
                          data-role="<%= user.role %>"
                          data-gender="<%= user.gender %>"
                          data-address="<%= user.address %>"
                          data-email="<%= user.email %>">
                          Edit
                        </button>
                        <button class="btn btn-outline-danger btn-sm" onclick="confirmDelete('<%= user.user_id %>')">Delete</button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="11" class="text-center text-muted">‚ùå Kh√¥ng t√¨m th·∫•y ng∆∞·ªùi d√πng!</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%- include('partials/pagination', { dataTable }) %>
  </div>

</div>

<%- include('partials/editUser') %>
<script src="/js/editUser.js"></script>
<script src="/js/pagination.js"></script> 
<%- include('layouts/footer') %>
