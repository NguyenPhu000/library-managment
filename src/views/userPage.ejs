<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Management Table</title>

    <!-- Bootstrap 5 CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <!-- Link file CSS -->
    <link rel="stylesheet" href="/css/userPage.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-bordered mb-0">
              <thead class="table-light">
                <tr>
                  <th>No.</th>
                  <th>Username</th>
                  <th>Role</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Gender</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th>Is Active</th>
                  <th>Create At</th>
                  <th>Update At</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% dataTable.forEach(function(user, index) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><strong><%= user.username %></strong></td>
                  <td>
                    <span
                      class="badge rounded-pill <%= user.role === 'admin' ? 'bg-danger' : 'bg-info' %>"
                    >
                      <%= user.role %>
                    </span>
                  </td>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.gender == 1 ? 'Male' : 'Female' %></td>
                  <td>
                    <a href="mailto:<%= user.email %>"><%= user.email %></a>
                  </td>
                  <td><%= user.phone %></td>
                  <td><%= user.address %></td>
                  <td>
                    <a
                      href="/toggle-user-active?id=<%= user.user_id %>"
                      class="badge rounded-pill <%= user.is_active == 1 ? 'bg-info' : 'bg-danger' %> toggle-active"
                    >
                      <%= user.is_active == 1 ? "On" : "Off" %>
                    </a>
                  </td>
                  <td><%= user.create_at %></td>
                  <td><%= user.updated_at %></td>
                  <td>
                    <div class="d-flex gap-2">
                      <a
                        href="/put-user?id=<%= user.user_id%>"
                        class="btn btn-primary btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#editUserModal"
                        data-id="<%= user.user_id %>"
                        data-username="<%= user.username %>"
                        data-first_name="<%= user.first_name %>"
                        data-last_name="<%= user.last_name %>"
                        data-phone="<%= user.phone %>"
                        data-role="<%= user.role %>"
                        data-gender="<%= user.gender %>"
                        data-address="<%= user.address %>"
                        data-email="<%= user.email %>"
                      >
                        Edit
                      </a>
                      <a
                        href="/delete-user?id=<%= user.user_id%>"
                        class="btn btn-danger btn-sm"
                      >
                        Delete
                      </a>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="mt-4"><%- include('partials/createUser') %></div>
    </div>

    <!-- Include the Edit User Modal -->
    <%- include('partials/editUser') %>

    <!-- jQuery & Bootstrap 5 JS & dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Link to the JS file -->
    <script src="/js/editUser.js"></script>
  </body>
</html>
