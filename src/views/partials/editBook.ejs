<!-- Modal Chỉnh Sửa Sách -->
<div
  class="modal fade"
  id="editBookModal"
  tabindex="-1"
  aria-labelledby="editBookModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content p-4 custom-modal">
      <div class="modal-header border-0 pb-0">
        <h3 class="modal-title fw-bold" id="editBookModalLabel">
          Chỉnh Sửa Sách
        </h3>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          action="/books/update"
          method="POST"
          enctype="multipart/form-data"
        >
          <!-- Trường ẩn để lưu ID sách -->
          <input type="hidden" id="edit_book_id" name="book_id" />

          <div class="row">
            <!-- Cột bên trái -->
            <div class="col-md-6">
              <div class="mb-3">
                <label for="edit_isbn" class="form-label">ISBN</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit_isbn"
                  name="isbn"
                />
              </div>
              <div class="mb-3">
                <label for="edit_title" class="form-label">Tiêu Đề</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit_title"
                  name="title"
                />
              </div>
              <div class="mb-3">
                <label for="edit_author" class="form-label">Tác Giả</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit_author"
                  name="author"
                />
              </div>
              <div class="mb-3">
                <label for="edit_publication_year" class="form-label"
                  >Năm Xuất Bản</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="edit_publication_year"
                  name="publication_year"
                />
              </div>
              <div class="mb-3">
                <label for="edit_publisher" class="form-label"
                  >Nhà Xuất Bản</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="edit_publisher"
                  name="publisher"
                />
              </div>
            </div>

            <!-- Cột bên phải -->
            <div class="col-md-6">
              <div class="mb-3">
                <label for="edit_total_copies" class="form-label"
                  >Tổng Số Lượng</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="edit_total_copies"
                  name="total_copies"
                />
              </div>
              <div class="mb-3">
                <label for="edit_available_copies" class="form-label"
                  >Số Lượng Có Sẵn</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="edit_available_copies"
                  name="available_copies"
                />
              </div>
<div class="mb-3">
  <label for="category_ids" class="form-label">Danh Mục</label>
  <select class="form-control" name="category_ids" multiple>
    <% categories.forEach((category) => { %>
      <option value="<%= category.category_id %>" 
        <%= (book && book.categories && book.categories.some(cat => cat.category_id === category.category_id)) ? "selected" : "" %> >
        <%= category.name %>
      </option>
      
    <% }) %>
  </select>
              </div>
              <div class="mb-3">
                <label for="edit_status" class="form-label">Trạng Thái</label>
                <select id="edit_status" class="form-select" name="status">
                  <option value="available">Còn Sách</option>
                  <option value="unavailable">Hết Sách</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="edit_cover_image" class="form-label">Ảnh Bìa</label>
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <input
                      type="file"
                      class="form-control"
                      id="edit_cover_image"
                      name="cover_image"
                      onchange="showImage(this)"
                    />
                  </div>
                  <div class="col-md-6 text-end image-preview-container">
                    <img
                      id="edit_image_preview"
                      class="img-fluid"
                      src="/uploads/<%= book && book.cover_image ? book.cover_image : 'default.jpg' %>"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Cập Nhật</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
