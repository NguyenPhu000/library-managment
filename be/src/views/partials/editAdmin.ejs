<!-- Modal Edit Admin -->
<div
  class="modal fade"
  id="editAdminModal"
  tabindex="-1"
  aria-labelledby="editAdminModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="editAdminModalLabel">
          Edit Admin
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/api/admin/update" method="POST">
          <!-- Trường ẩn để gửi ID Admin -->
          <input type="hidden" name="admin_id" id="editAdminId" />

          <div class="mb-3">
            <label class="form-label text-secondary">Username</label>
            <input
              type="text"
              class="form-control"
              id="editUsername"
              disabled
            />
          </div>

          <div class="mb-3">
            <label class="form-label text-secondary">Access Level</label>
            <input
              type="number"
              class="form-control"
              name="access_level"
              id="editAccessLevel"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label text-secondary">Department</label>
            <input
              type="text"
              class="form-control"
              name="department"
              id="editDepartment"
              required
            />
          </div>

          <div class="mb-3 form-check">
            <input
              type="checkbox"
              class="form-check-input"
              name="can_manage_users"
              id="editCanManageUsers"
            />
            <label class="form-check-label text-secondary"
              >Can Manage Users</label
            >
          </div>

          <div class="mb-3 form-check">
            <input
              type="checkbox"
              class="form-check-input"
              name="can_manage_books"
              id="editCanManageBooks"
            />
            <label class="form-check-label text-secondary"
              >Can Manage Books</label
            >
          </div>

          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
