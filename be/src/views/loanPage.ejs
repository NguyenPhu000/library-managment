<!-- Header -->
<%- include('layouts/header', { title: 'Quản lý mượn sách' }) %>

<!-- Sidebar -->
<%- include('layouts/sidebar') %>

<!-- Main Content -->
<div class="main-content flex-grow-1 p-4">
  <div class="container-fluid">
    <h3><i class="fas fa-book-reader"></i> Quản lý mượn sách</h3>

    <table class="table table-bordered mt-4">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Thành viên</th>
          <th>Sách</th>
          <th>Ngày mượn</th>
          <th>Hạn trả</th>
          <th>Trạng thái</th>
          <th>Gia hạn</th>
          <th>Thao tác</th>
        </tr>
      </thead>
      <tbody>
        <% dataTable.forEach(function(loan, index) { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= loan.Member ? loan.Member.member_code : "N/A" %></td>
          <td><%= loan.Book ? loan.Book.title : "N/A" %></td>
          <td><%= loan.loan_date.toISOString().split('T')[0] %></td>
          <td><%= loan.due_date.toISOString().split('T')[0] %></td>
          <td>
            <% if (loan.returned) { %>
            <span class="badge bg-success"
              ><i class="fas fa-check"></i> Đã trả</span
            >
            <% } else { %>
            <span class="badge bg-warning"
              ><i class="fas fa-clock"></i> Đang mượn</span
            >
            <% } %>
          </td>

          <!-- Cột Trạng thái Gia Hạn -->
          <td>
            <% if (loan.renewal_status === "pending") { %>
            <span class="badge bg-info text-dark"
              ><i class="fas fa-hourglass-half"></i> Chờ duyệt</span
            >
            <% } else if (loan.renewal_status === "approved") { %>
            <span class="badge bg-success"
              ><i class="fas fa-check-circle"></i> Đã duyệt</span
            >
            <% } else if (loan.renewal_status === "rejected") { %>
            <span class="badge bg-danger"
              ><i class="fas fa-times-circle"></i> Từ chối</span
            >
            <% } else { %>
            <span class="badge bg-secondary"
              ><i class="fas fa-ban"></i> Không yêu cầu</span
            >
            <% } %>
          </td>

          <!-- Cột Thao Tác -->
          <td>
            <% if (!loan.returned) { %>
            <form action="/api/loans/return" method="POST" class="d-inline">
              <input type="hidden" name="loan_id" value="<%= loan.loan_id %>" />
              <button type="submit" class="btn btn-sm btn-danger">
                <i class="fas fa-undo"></i> Trả sách
              </button>
            </form>

            <!-- Chỉ hiện khi yêu cầu đang chờ duyệt -->
            <% if (loan.renewal_status === "pending") { %>
            <form
              action="/api/loans/approve-renew"
              method="POST"
              class="d-inline"
            >
              <input type="hidden" name="loan_id" value="<%= loan.loan_id %>" />
              <input type="hidden" name="action" value="approve" />
              <button type="submit" class="btn btn-sm btn-success">
                <i class="fas fa-check"></i> Duyệt
              </button>
            </form>

            <form
              action="/api/loans/approve-renew"
              method="POST"
              class="d-inline"
            >
              <input type="hidden" name="loan_id" value="<%= loan.loan_id %>" />
              <input type="hidden" name="action" value="reject" />
              <button type="submit" class="btn btn-sm btn-warning">
                <i class="fas fa-times"></i> Từ chối
              </button>
            </form>
            <% } %> <% } else { %>
            <span class="text-muted">-</span>
            <% } %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <%- include('partials/pagination', { dataTable }) %>
  </div>
</div>

<script src="/js/pagination.js"></script>

<!-- Footer -->
<%- include('layouts/footer') %>
